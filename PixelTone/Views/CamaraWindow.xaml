<Window x:Class="PixelTone.Views.CamaraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelTone.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Cámara" 
        Height="926" 
        Width="1051"
        Background="#292929"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"     >

    <Grid>
        <!-- Barra superior -->
        <Grid Background="#1E1E1E" Height="30" VerticalAlignment="Top" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Assests/Logo.png" Width="28" Margin="12,1,0,1" HorizontalAlignment="Left"/>
            <TextBlock Text=" Cámara" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#8E8E93" 
                       VerticalAlignment="Center" 
                       Margin="45,0,621,0" Grid.ColumnSpan="2"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="_" 
                        ToolTip="Minimizar" 
                        Width="30" 
                        Margin="5,0" 
                        Click="MinimizeWindow" 
                        Background="Transparent" 
                        Foreground="#8E8E93" 
                        BorderThickness="0" 
                        FontSize="16"/>
                <Button Content="X" 
                        ToolTip="Cerrar" 
                        Width="30" 
                        Margin="5,0" 
                        Click="CloseWindow" 
                        Background="Transparent" 
                        Foreground="#8E8E93" 
                        BorderThickness="0" 
                        FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Contenido principal -->
        <Grid Margin="0,30,10,10" Background="#292929">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel lateral -->
            <Border Grid.Row="0" Grid.Column="0" Background="#1E1E1E" Width="50" Margin="0,0,10,258" Grid.RowSpan="2">
                <StackPanel>
                    <Button Margin="5" 
                            Height="40" 
                            Click="InicioButton_Click" 
                            Background="Transparent" 
                            BorderThickness="0">
                        <Image Source="/Assests/Filtros/Home_Icon.png" Width="40" Height="40"/>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Área de trabajo -->
            <Border Grid.Row="0" Background="#3E3E3E" Margin="50,0,0,259" Grid.RowSpan="2" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botón de activar cámara -->
                    <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="10">
                        <Button x:Name="ActivarCamaraButton"
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="ActivarCamaraButton_Click">
                            <Image Source="/Assests/Camara/Camera_Icon.png" Width="40" Height="40"/>
                        </Button>
                        <TextBlock x:Name="ActivarCamaraTextBlock" 
                               Text="Activar Cámara" 
                               HorizontalAlignment="Center" 
                               Foreground="#8E8E93"/>

                    </StackPanel>
                    <!-- Botón de revertir -->
                    <Button x:Name="RevertirButton" 
                    Grid.Column="1" 
                    HorizontalAlignment="Right" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Click="RevertirButton_Click">
                        <Image Source="/Assests/Filtros/Back_Icon.png" Width="71" Height="39"/>
                    </Button>
                    <!-- Vista de la cámara -->
                    <Border Grid.Row="1" Grid.Column="0" Background="#1E1E1E" Margin="54,33,54,71">
                        <Image x:Name="cameraImage" 
                               Stretch="Uniform" 
                               VerticalAlignment="Stretch" 
                               HorizontalAlignment="Stretch"/>
                    </Border>

                    <!-- Selector de color con ColorPicker del WPF Toolkit -->
                    <Border Grid.Row="1" Grid.Column="1" Background="#1E1E1E" Margin="10,10,10,71" Width="250">
                        <StackPanel>
                            <!-- Título -->
                            <TextBlock Text="Seleccionar Color" 
                   FontSize="14" 
                   FontWeight="Bold" 
                   Margin="0,10,0,5"
                   Foreground="#8E8E93" 
                   HorizontalAlignment="Center"/>
                            <xctk:ColorCanvas x:Name="colorCanvas"
                          Height="301"
                          SelectedColorChanged="ColorCanvas_SelectedColorChanged"
                          Background="#2E2E2E"
                          Foreground="#8E8E93">
                                <xctk:ColorCanvas.Resources>
                                    <!-- Estilo para los botones -->
                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="#3E3E3E"/>
                                        <Setter Property="BorderBrush" Value="#8E8E93"/>
                                        <Setter Property="Foreground" Value="#8E8E93"/>
                                        <Setter Property="Margin" Value="2"/>
                                    </Style>

                                    <!-- Estilo para los TextBox -->
                                    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Background" Value="#3E3E3E"/>
                                        <Setter Property="BorderBrush" Value="#8E8E93"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="Margin" Value="2"/>
                                        <Setter Property="Padding" Value="3"/>
                                    </Style>

                                    <!-- Estilo para los Sliders -->
                                    <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource {x:Type Slider}}">
                                        <Setter Property="Background" Value="#3E3E3E"/>
                                        <Setter Property="BorderBrush" Value="#3E3E3E"/>
                                        <Setter Property="Foreground" Value="#8E8E93"/>
                                    </Style>

                                    <!-- Estilo para los Labels -->
                                    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
                                        <Setter Property="Foreground" Value="#8E8E93"/>
                                    </Style>
                                </xctk:ColorCanvas.Resources>
                            </xctk:ColorCanvas>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>

            <!-- Histograma -->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#1E1E1E" Padding="25" Margin="0,10,0,0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Histograma" Foreground="#8E8E93" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Image x:Name="Histograma" Width="400" Height="150" Stretch="Uniform"/>
                    <ComboBox x:Name="CanalComboBox" SelectionChanged="CanalComboBox_SelectionChanged" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <ComboBoxItem Content="RGB" IsSelected="True"/>
                        <ComboBoxItem Content="R"/>
                        <ComboBoxItem Content="G"/>
                        <ComboBoxItem Content="B"/>
                    </ComboBox>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
