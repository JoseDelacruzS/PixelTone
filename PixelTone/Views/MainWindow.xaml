<Window x:Class="PixelTone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PixelTone" 
        Height="600" 
        Width="800" 
        Background="#292929" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid Background="#1E1E1E" Height="30" VerticalAlignment="Top" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Assests/Logo.png" Width="28" Margin="12,1,0,1" HorizontalAlignment="Left"/>

            <Button Width="30" Grid.Column="1" Content="_" Click="MinimizeWindow" Background="Transparent" Foreground="#8E8E93" BorderThickness="0" FontSize="16"/>

            <Button Width="30" Grid.Column="2" Content="X" Click="CloseWindow" Background="Transparent" Foreground="#8E8E93" BorderThickness="0" FontSize="16"/>
        </Grid>

        <TextBlock Text="Selecciona modo de edición" 
                   Foreground="Gray" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,50,0,0" 
                   FontSize="16"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="230" Height="200" Background="Transparent" BorderThickness="0" Click="BtnFiltros_Click" Margin="30,0,30,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Assests/Menu principal/Img_box.png" Width="120"/>
                        <Image Source="/Assests/Menu principal/Video_file.png" Width="120" Margin="1,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="IMAGEN Y VIDEO" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Button>

            <Button Width="180" Height="180" Background="Transparent" BorderThickness="0" Click="BtnCamara_Click" Margin="30,0,30,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assests/Menu principal/Video_file.png" Width="130"/>
                    <TextBlock Text="CÁMARA" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>